
<%= form_with model: @project, local: true, class: "mx-auto grid max-w-screen-md gap-4 sm:grid-cols-2" do |f| %>
    <div class="sm:col-span-2">
      <%= f.label :name, class: "mb-2 inline-block text-sm text-gray-800 sm:text-base" %>
      <%= f.text_field :name, class: "w-full rounded border bg-gray-50 px-3 py-2 text-gray-800 outline-none ring-indigo-300 transition duration-100 focus:ring" %>
    </div>

    <div class="sm:col-span-2">
      <%= f.label :description, class: "mb-2 inline-block text-sm text-gray-800 sm:text-base" %>
      <%= f.text_field :description, class: "w-full rounded border bg-gray-50 px-3 py-2 text-gray-800 outline-none ring-indigo-300 transition duration-100 focus:ring" %>
    </div>

    <h3 class="mb-4 text-center text-2xl font-bold text-gray-800 md:mb-6 lg:text-3xl">Tasks</h3>
    <div id="tasks", class="sm:col-span-2">
      <%= f.fields_for :tasks do |task| %>
        <%= render "task_fields", :f => task %>
      <% end %>
      <div class="links">
      <%= link_to_add_association 'Add Task', f, :tasks, class: 'btn btn-success' %>
    </div>
  </div>
  <div class="flex items-center justify-between sm:col-span-2">
    <%= f.submit 'Save', class: 'inline-block rounded-lg bg-indigo-500 px-8 py-3 text-center text-sm font-semibold text-white outline-none ring-indigo-300 transition duration-100 hover:bg-indigo-600 focus-visible:ring active:bg-indigo-700 md:text-base' %>
  </div>
<% end %>